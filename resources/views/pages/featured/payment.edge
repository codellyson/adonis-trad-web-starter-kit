<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Complete Payment - BookMe</title>
  <link href="/css/app.css" rel="stylesheet" />
  <script src="https://js.paystack.co/v2/inline.js"></script>
</head>
<body class="bg-sand-1 min-h-screen flex items-center justify-center px-4">
  <div class="w-full max-w-md">
    <div class="text-center mb-8">
      <div class="w-16 h-16 bg-gradient-to-br from-amber-400 to-orange-500 rounded-2xl flex items-center justify-center mx-auto mb-4">
        <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
      </div>
      <h1 class="text-2xl font-bold text-sand-12">Complete Your Payment</h1>
      <p class="text-sand-11 mt-1">Get your business featured on BookMe</p>
    </div>

    <div class="bg-white border border-sand-7 rounded-xl p-6 mb-6">
      <div class="space-y-4">
        <div class="flex justify-between">
          <span class="text-sand-11">Plan</span>
          <span class="font-medium text-sand-12 capitalize">{{ featured.plan }}</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Duration</span>
          <span class="font-medium text-sand-12">{{ featured.durationDays }} days</span>
        </div>
        <div class="flex justify-between">
          <span class="text-sand-11">Business</span>
          <span class="font-medium text-sand-12">{{ featured.displayName || featured.business.name }}</span>
        </div>
        <div class="border-t border-sand-6 pt-4 flex justify-between">
          <span class="font-medium text-sand-12">Total</span>
          <span class="text-xl font-bold text-sand-12">₦{{ Number(featured.amount).toLocaleString() }}</span>
        </div>
      </div>
    </div>

    <button
      id="payBtn"
      onclick="payWithPaystack()"
      class="w-full py-4 bg-gradient-to-r from-amber-400 to-orange-500 text-white font-semibold rounded-xl hover:from-amber-500 hover:to-orange-600 transition-all text-lg"
    >
      Pay ₦{{ Number(featured.amount).toLocaleString() }}
    </button>

    <a 
      href="{{ route('featured.cancel', { id: featured.id }) }}"
      class="block text-center text-sm text-sand-11 hover:text-sand-12 mt-4"
    >
      Cancel and go back
    </a>

    <p class="text-center text-sm text-sand-11 mt-6">
      Secure payment powered by Paystack
    </p>
  </div>

  <script>
    function payWithPaystack() {
      const handler = PaystackPop.setup({
        key: '{{ paystackPublicKey }}',
        email: '{{ featured.business.email }}',
        amount: {{ featured.amount * 100 }},
        currency: 'NGN',
        ref: '{{ featured.paymentReference }}',
        metadata: {
          featured_id: {{ featured.id }},
          business_id: {{ featured.businessId }},
          plan: '{{ featured.plan }}',
          custom_fields: [
            {
              display_name: 'Featured Listing',
              variable_name: 'featured_plan',
              value: '{{ featured.plan }} ({{ featured.durationDays }} days)'
            }
          ]
        },
        callback: function(response) {
          window.location.href = '/featured/{{ featured.id }}/verify?reference=' + response.reference;
        },
        onClose: function() {
          console.log('Payment window closed');
        }
      });
      handler.openIframe();
    }
  </script>
</body>
</html>

